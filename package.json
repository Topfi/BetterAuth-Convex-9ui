{
  "name": "betterautheval",
  "private": true,
  "type": "module",
  "version": "0.8.0",
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite",
    "dev:backend": "convex dev --typecheck-components --live-component-sources",
    "build:shared": "tsc -b shared/tsconfig.json",
    "convex:generate": "convex dev --once",
    "generate": "run-s build:shared convex:generate",
    "logs": "convex logs",
    "typecheck": "run-s build:shared typecheck:projects",
    "typecheck:projects": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p convex/tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest --run --passWithNoTests",
    "verify:features": "node scripts/verify-feature-parity.mjs",
    "secretlint": "node scripts/run-secretlint.mjs \"**/*\"",
    "setup:env": "node scripts/setup-env.mjs",
    "check": "run-s verify:features typecheck lint format:check test",
    "audit": "run-s secretlint && npm audit --audit-level=moderate"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.3",
    "@convex-dev/better-auth": "^0.8.0",
    "@convex-dev/resend": "^0.1.12",
    "@hookform/resolvers": "^5.2.2",
    "@react-email/components": "^0.5.3",
    "@tailwindcss/vite": "^4.1.13",
    "@zxcvbn-ts/core": "^3.0.4",
    "@zxcvbn-ts/language-common": "^3.0.4",
    "@zxcvbn-ts/language-en": "^3.0.2",
    "better-auth": "1.3.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk-base": "^0.0.8",
    "convex": "^1.27.0",
    "convex-helpers": "^0.1.104",
    "embla-carousel": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-day-picker": "^9.10.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-phone-number-input": "^3.4.12",
    "react-qr-code": "^2.0.18",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^7.9.1",
    "recharts": "^3.2.1",
    "resend": "^6.0.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.3.8",
    "vaul-base": "^0.0.6",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.4.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unused-imports": "^4.2.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "secretlint": "^11.2.4",
    "shadcn": "^3.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  }
}
